<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-10 col-xs-10">
            <h3>We love traveling!</h3>
            <h3>Book Now</h3>
            <br>
            <br>
            {{#if error}}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Failed to Book You!</strong> {{error}}.
            </div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>You have been Booked!</strong>
            </div>
            {{/if}}
            <form action="/api/login/passenger/book" method="POST">
                <div class="form-group">
                    <label for="startingStation">Starting Station:</label>
                    <select id="startingStation" name="StartingStation"
                        class="browser-default custom-select custom-select-lg mb-3 form-control">
                        <option value="null" selected>SelectStation</option>
                        {{#each station}}
                        <option value="{{location}}">{{location}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="destinationStation">Destination Station:</label>
                    <select id="destinationStation" name="DestinationStation"
                        class="browser-default custom-select custom-select-lg mb-3 form-control">
                        <option value="null" selected>SelectStation</option>
                        {{#each station}}
                        <option value="{{location}}">{{location}}</option>
                        {{/each}}

                    </select>
                </div>
                <div class="form-group">
                    <label for="seat">Seat Number:</label>
                    <input type="number" name="seatNumber" class="form-control" id="seat" value="1" required>

                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" name="Date" class="form-control" id="date" required>
                </div>
                <div class="form-group">
                    <label for="Time">Time:</label>
                    <select id="destinationStation" name="Time"
                        class="browser-default custom-select custom-select-lg mb-3 form-control">
                        <option selected value="12:00 AM">12:00 AM</option>
                        <option value="01:00 AM">01:00 AM</option>
                        <option value="02:00 AM">02:00 AM</option>
                        <option value="03:00 AM">03:00 AM</option>
                        <option value="04:00 AM">04:00 AM</option>
                        <option value="05:00 AM">05:00 AM</option>
                        <option value="06:00 AM">06:00 AM</option>
                        <option value="07:00 AM">07:00 AM</option>
                        <option value="08:00 AM">08:00 AM</option>
                        <option value="09:00 AM">09:00 AM</option>
                        <option value="10:00 AM">10:00 AM</option>
                        <option value="11:00 AM">11:00 AM</option>
                        <option value="12:00 PM">12:00 PM</option>
                        <option value="01:00 PM">01:00 PM</option>
                        <option value="02:00 PM">02:00 PM</option>
                        <option value="03:00 PM">03:00 PM</option>
                        <option value="04:00 PM">04:00 PM</option>
                        <option value="05:00 PM">05:00 PM</option>


                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Book</button>
            </form>

        </div>
        <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1">
        </div>
    </div>
</div>