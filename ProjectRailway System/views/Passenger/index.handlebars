<div class="container text-center">
    {{#if success}}
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Operation was successful!</strong>
    </div>
    {{/if}}
    <h3><em>Recent Bookings</em></h3>
    <p><em>We love traveling!</em></p>
    {{#each Booking}}
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h3>Starting : {{startingStationId.location}}</h3>
            <h3>Destination : {{destinationStationId.location}}</h3>
            <p>Seat Number: {{seatNumber}} </p>
            <p>Train Color : {{trainId.Color}}</p>
            <p>Time: {{time}}</p>
            <p> Date: {{date}}</p>
        </div>
        <form method="POST" action="/api/login/passenger/cancel/{{_id}}?_method=DELETE">
            <button class="btn btn-dark" type="submit">Cancel Booking</button>
        </form>
        <hr>
    </div>
    <br>
    {{else}}
    <h3> You Haven't Booked yet!</h3>
    <a class="btn btn-dark" href="/api/login/passenger/booking">Click here To Book</a>
    <br>
    {{/each}}
    {{#if Booking}}
    {{#if BookingViewMore}}
        <a class="btn btn-link" href="/api/login/passenger/index/viewMore">view More</a> 
    {{/if}}
    {{/if}}
</div>